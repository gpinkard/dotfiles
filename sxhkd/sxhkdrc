### BSPWM FUNCTIONS


# Reload functions
super + Escape
	~/.config/bspwm/bspwmrc; \
	pkill -USR1 -x sxhkd; \
	notify-send 'Bspwm/Sxhkd' 'Configs reloaded'

# Exit bspwm
super + E
	bspc quit


# WINDOWS AND MOVEMENTS


# Focus and move window in given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}
	
# close window
super + Q
	bspc node -c

# window state
super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

super + {m,n}
	bspc node -g {marked, locked}

# Focus to the given desktop.
super + {1-9,0}
	bspc desktop -f '^{1-9,10}'

# Focus or send to given workspace
super + {_,shift + }{1-9,0};
	bspc {desktop -f, node -d} '^{1-9,10}'

# Move floating window.
super + {Left,Down,Up,Right}
	bspc node -v {-70 0,0 70,0 -70,70 0}


### TEMINAL + TERMINAL APPS


# terminal emulator
super + Return
	urxvt
# st
super + alt + Return
	st
# ranger
super + r
	urxvt -e ranger
# htop
super + t
	urxvt -e htop

### MISCELLANY

# rofi
super + space 
	rofi -show run -lines 10 -width 18 -padding 5 -font "Souce Code Pro 18" 
#increase volume
super + p
	pactl set-sink-volume 0 +5% 
#decrease volume
super + o
	pactl set-sink-volume 0 -5% 


